{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
          <i class="fa fa-save"></i>
        </button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
          <i class="fa fa-reply"></i>
        </a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li>
            <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning is iterable and error_warning|length >  0 %}
      {% for error in error_warning %}      
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error}}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
      {% endfor %}{% endif %}
      <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_for_worldline}}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
        </div>
        <div class="panel-body">
          <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-merchant">{{ merchant_code }}</label>
              <div class="col-sm-10">
                <input type="text" name="worldline_merchant_code" value="{{ worldline_merchant_code }}" placeholder="{{ merchant_code }}" id="input-merchant-code" class="form-control" />
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-mode">{{ request_type }}</label>
              <div class="col-sm-10">
                <select name="payment_worldline_request_type" id="input-mode" class="form-control">
                  {% if payment_worldline_request_type == 'T' %}
                    <option value="T" selected="selected">{{ request_type_T }}</option>
                  {% else %}
                    <option value="T">{{ request_type_T }}</option>
                  {% endif %}
                </select>
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-key">{{ key }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_worldline_key" value="{{ payment_worldline_key }}" placeholder="{{ key }}" id="input-key" class="form-control" />
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-iv">{{ iv }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_worldline_iv" value="{{ payment_worldline_iv }}" placeholder="{{ iv }}" id="input-iv" class="form-control" />
              </div>
            </div>
            <div class="form-group required" id="webservice_locator" >
              <label class="col-sm-2 control-label" for="input-mode">{{ webservice_locator }}</label>
              <div class="col-sm-10">
                <select name="payment_worldline_webservice_locator" id="input-mode" class="form-control">
                  {% if payment_worldline_webservice_locator == 'Test' %}
                    <option value="Test" selected="selected">{{ 'TEST' }}</option>
                  {% else %}
                    <option value="Test">{{ 'TEST' }}</option>
                  {% endif %}
                  {% if payment_worldline_webservice_locator == 'Live' %}
                    <option value="Live" selected="selected">{{ 'LIVE' }}</option>
                  {% else %}
                    <option value="Live">{{ 'LIVE' }}</option>
                  {% endif %}
                </select>
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-order-status">{{ order_status }}</label>
              <div class="col-sm-10">
                <select name="payment_worldline_order_status" id="input-order-status" class="form-control">
                  {% for order_status in order_statuses %}
                    {% if order_status.order_status_id  ==  payment_worldline_order_status %}
                      <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                      <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-status">{{ status }}</label>
              <div class="col-sm-10">
                <select name="payment_worldline_status" id="input-status" class="form-control">
                  {% if payment_worldline_status == "1" %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                  {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %} 
                </select>
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-sort_order">{{ sort_order }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_worldline_sort_order" value="{{ payment_worldline_sort_order }}" placeholder="{{ sort_order }}" id="input-sort_order" class="form-control" />
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-merchant_scheme_code">{{ merchant_scheme_code }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_worldline_merchant_scheme_code" value="{{ payment_worldline_merchant_scheme_code }}" placeholder="{{ merchant_scheme_code }}" id="input-merchant_scheme_code" class="form-control" />
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>  
{{ footer }}